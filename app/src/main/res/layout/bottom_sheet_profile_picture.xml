<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/padding_standard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/camera"
            android:contentDescription="Fotoğraf çek"
            android:padding="4dp" />

        <TextView
            android:id="@+id/takePhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_photo"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginStart="10dp"
            android:padding="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/selectphoto"
            android:contentDescription="Fotoğraf seç"
            android:padding="4dp" />

        <TextView
            android:id="@+id/selectPhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_photo"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/text_size_medium"
            android:padding="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/display_photo"
            android:contentDescription="Fotoğrafı Görüntüle"
            android:padding="4dp" />

        <TextView
            android:id="@+id/viewPhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_photo"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/text_size_medium"
            android:padding="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>
