<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_standard">

    <ImageView
        android:id="@+id/castProfileImageView"
        android:layout_width="@dimen/cast_profile_image_width"
        android:layout_height="@dimen/cast_profile_image_height"
        android:layout_marginTop="@dimen/cast_profile_image_margin_top"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/castNameTextView"
        android:layout_width="0dp"
        android:layout_height="@dimen/cast_name_height"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/cast_name_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/castProfileImageView" />

    <TextView
        android:id="@+id/characterNameTextView"
        android:layout_width="0dp"
        android:layout_height="@dimen/character_name_height"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:gravity="center"
        android:textColor="@color/darker_gray"
        android:textSize="@dimen/character_name_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/castNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
